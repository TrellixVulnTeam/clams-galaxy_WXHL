<tool id="chyron" name="Bottom Thirds to Text" version="0.0.1">
  <description>
    apply OCR to bottom thirds
  </description>
  <command interpreter="python">bottom_thirds.py $input $miff $output</command>
  <inputs>
    <param name="input" type="data" format="binary" label="Video"/>
      <param name="miff" type="data" format="json" label="MMIF" />
  </inputs>
  <outputs>
    <data name="output" format="json" label="Bottom Thirds"/>
  </outputs>
  <help>
    Bottom Thirds
  </help>
</tool>
